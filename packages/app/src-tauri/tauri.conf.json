{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Roomy",
  "version": "0.1.3-alpha-8",
  "identifier": "space.roomy",
  "build": {
    "frontendDist": "../build-tmp",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev"
  },
  "app": {
    "windows": [
      {
        "title": "Roomy",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "headers": {
        "Cross-Origin-Embedder-Policy": "require-corp",
        "Cross-Origin-Opener-Policy": "same-origin",
        "Permissions-Policy": "cross-origin-isolated=*"
      },
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "versionCode": 70
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "host": "space.roomy"
        }
      ],
      "desktop": {
        "schemes": [
          "space.roomy",
          "roomy"
        ]
      }
    }
  }
}