{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Roomy",
  "version": "0.1.0-alpha-6",
  "identifier": "space.roomy",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev"
  },
  "app": {
    "windows": [
      {
        "title": "Roomy",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "versionCode": 60
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "scheme": [
            "space.roomy"
          ],
          "host": "space.roomy",
          "appLink": false
        },
        {
          "scheme": [
            "https"
          ],
          "pathPrefix": [
            "/oauth/callback"
          ],
          "host": "space.roomy",
          "appLink": true
        }
      ],
      "desktop": {
        "schemes": [
          "space.roomy",
          "roomy"
        ]
      }
    }
  }
}