{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["http_proxy", "https_proxy", "no_proxy", "NODE_EXTRA_CA_CERTS", "NETLIFY"],
  "tasks": {
    "build-api-docs": {
      "dependsOn": ["^build-api-docs", "build-lib"],
      "outputs": ["./dist/**"]
    },
    "lint-staged": {
      "dependsOn": ["^lint-staged"],
      "cache": false
    },
    "build-discord-bridge": {
      "dependsOn": ["^build-discord-bridge", "build-lib"],
      "outputs": ["./dist/**"]
    },
    "build-lib": {
      "dependsOn": ["^build-lib"],
      "outputs": ["./dist/**"]
    },
    "build-web-app": {
      "dependsOn": ["^build-web-app", "build-lib"],
      "outputs": ["./dist/**", "./build"]
    },
    "build-web-app-prod": {
      "dependsOn": ["^build-web-app-prod", "build-lib"],
      "outputs": ["./dist/**", "./build"]
    },
    "dev": {
      "dependsOn": ["build-lib"],
      "persistent": true,
      "cache": false
    }
  }
}
